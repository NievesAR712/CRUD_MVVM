<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CRUD_MVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CRUD_MVVM"
    xmlns:views="clr-namespace:CRUD_MVVM.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="CRUD_MVVM"
    Shell.BackgroundColor="#5c7a7a"
    
    
    >

    <ShellContent
        Title="Usuarios"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        />

    <ShellContent
        Title="Nuevo Usuario"
        ContentTemplate="{DataTemplate views:UsuarioPage}"
        Route="UsuariosPage" />

    <ShellContent
        Title="Pedidos"
        ContentTemplate="{DataTemplate views:VerPedidosPage}"
        Route="VerPedidoPage" />

    <ShellContent
        Title="Nuevo Pedido"
        ContentTemplate="{DataTemplate views:PedidoPage}"
        Route="PedidoPage" />



</Shell>
